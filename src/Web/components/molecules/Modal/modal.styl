@import '~Styles/index'

.modal
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  display flex
  align-items center
  justify-content center

  &__background
    background --dark-color
    height 100%
    width 100%
    opacity .2
    position absolute

  &__dialog
    reset(--base-size (--base-size * 2))
    display grid
    grid-gap --base-size
    background --background-color
    border-radius --base-size
    width 80%
    z-index 10

  &__content
    display grid
    grid-gap --base-size

  &__header
    display flex
    justify-content space-between
    align-items center

  &__title
    padding 0

  &__close-icon
    font-size 2em

  &__footer
    text-align right
