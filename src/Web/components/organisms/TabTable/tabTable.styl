@import '~Styles/index'

.tab-table
  &__table
    width 100%
    padding --base-size

    tbody,
    tfoot
      th
        text-align right

    button
      width 100%

  &__modal-background,
  &__modal-content
    position fixed
    top 0
    right 0
    bottom 0
    left 0

  &__modal-background
    background black
    height 100%
    width 100%
    opacity .2
    z-index 10

  &__modal-content
    z-index 100
    display flex
    align-items center
    justify-content center

  &__modal,
  &__modal-body
    display grid
    grid-gap --base-size

  &__modal
    background white
    border-radius --base-size
    padding --base-size (--base-size * 2)
    width 80%

  &__modal-header
    display flex
    justify-content space-between
    align-items center

  &__modal-title
    padding 0

  &__modal-close_icon
    font-size 2em

  &__modal-footer
    text-align right
